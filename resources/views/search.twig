{% extends 'layouts/app.twig' %}

{% block content %}

<div class="container">
	<div class="row">

		<div class="col-12 col-md-6 ui-block">
			<div class="row">
				<div class="col-6 pt-3 pl-3">
					<div class="form-group label-floating is-select ">
						<label class="control-label">Sort by</label>
						<select name="sort_by" class="selectpicker form-control mb-0" style="background-color: white;">
							<option
									value="age">Age
							</option>
							<option
									value="location">Location
							</option>							
							<option
									selected
									value="rating">Rating
							</option>
							<option
									value="tags">Shared tags
							</option>
						</select>
					</div>

				</div>
				<div class="col-6 pt-3">
					<button id="filter_clear" class="btn btn-secondary mt-2">clear all filters</button>
					<button id="aply_filters" class="btn btn-primary mt-2">Aply filters</button>
				</div>
			
				<div class="col-12 text-center">
					<div class="text-center">
						<h6 class="title">Filters</h6>
					</div>
				</div>
				<div class="col-12">
					<div class="row">
						<div class="col-3 pt-3">
							<h5>Age range</h5>
						</div>
						<div class="col-4">
							<div class="form-group label-floating">
										<label class="control-label">Minimum</label>
										<input name="filter_age_min" class="form-control" placeholder="" type="number">
									</div>
						</div>
						<div class="col-4">
							<div class="form-group label-floating">
										<label class="control-label">Maximum</label>
										<input name="filter_age_max" class="form-control" placeholder="" type="number">
									</div>
						</div>
					</div>
				</div>

				<div class="col-12">
					<div class="row">
						<div class="col-3 pt-3">
							<h5>Rating range</h5>
						</div>
						<div class="col-4">
							<div class="form-group label-floating">
										<label class="control-label">Minimum</label>
										<input name="filter_rating_min" class="form-control" placeholder="" type="number">
									</div>
						</div>
						<div class="col-4">
							<div class="form-group label-floating">
										<label class="control-label">Maximum</label>
										<input name="filter_rating_max" class="form-control" placeholder="" type="number">
									</div>
						</div>
					</div>
				</div>

				<div class="col-12">
					<div class="row">
						<div class="col-3 pt-3">
							<h5>Location</h5>
						</div>
						<div class="col-4">
							<div class="form-group label-floating">
										<label class="control-label">??</label>
										<input name="firstName" class="form-control" placeholder="" type="text">
									</div>
						</div>
						<div class="col-4">
							<div class="form-group label-floating">
										<label class="control-label">??</label>
										<input name="firstName" class="form-control" placeholder="" type="text">
									</div>
						</div>
					</div>
				</div>

				<div class="col-12">
					<div class="row">
						<div class="col-3 pt-3">
							<h5>Tags</h5>
						</div>
						<div class="col-7">
							<div class="form-group label-floating">
										<label class="control-label">Tag name</label>
										<input name="filter_tag" class="form-control" placeholder="" type="text">
									</div>
						</div>
						<div class="col-2 mt-2">
							<button id="filter_add_tag" class="btn btn-primary">+</button>
						</div>
						<div class="col-3"></div>
						<div class="col-9" id="tag_list"></div>
					</div>
				</div>

			</div>
		</div>


		<div class="col-12 col-md-6">
			<div class="ui-block p-3">
				<!-- <div>
					<form id="search_form">
						<div class="form-group with-button">
							<input class="Search_p" placeholder="Searsch here people or pages..." type="text">
							<button href="#" class="loupe">
								<svg class="olymp-magnifying-glass-icon">
									<use xlink:href="/svg-icons/sprites/icons.svg#olymp-magnifying-glass-icon"></use>
								</svg>
							</button>
						</div>
					</form>
				</div> -->

				<div class="ui-block-title">
					<h6 class="title">Search results</h6>
				</div>

				<div class="row" id="Search_res">
					{% for result in search %}
					<div class="col-xl-5 col-lg-6 col-md-6 col-sm-6 col-xs-6">
						<div class="ui-block" data-mh="friend-groups-item">
							<div class="friend-item friend-groups">
								<div class="friend-item-content">
									<div class="more">
										<svg class="olymp-three-dots-icon">
											<use xlink:href="svg-icons/sprites/icons.svg#olymp-three-dots-icon"></use>
										</svg>
										<ul class="more-dropdown">
											{% if user.admin %}
												<li>
													<a href="#" data-type="block" data-id="{{ result.id_user }}">Block Profile</a>
												</li>
											{% else %}
												<li>
													<a href="#" data-type="report" data-id="{{ result.id_user }}">Report Profile</a>
												</li>
											{% endif %}
										</ul>
									</div>
									<div class="friend-avatar">
										<div class="author-thumb">
											<img src="img{{ result.img }}">
										</div>
										<div class="author-content">
											<a href="/profile/{{ result.id_user }}"
											   class="h5 author-name">{{ result.login }}</a>
											<div class="country">{{ result.status }}</div>
											<div class="country">age: {{ result.age }}</div>
											<div class="country">rating: {{ result.rating }} <i class="fa fa-star" style="color: #f5c310;"></i></div>
										</div>
									</div>

									<div class="control-block-button">
										<a data-type="add" data-id="{{ result.id_user }}"
										   title="Send request" href="#" class="btn btn-control bg-green friend"
										   data-toggle="modal" data-target="#create-friend-group-add-friends">
											<svg class="olymp-happy-faces-icon">
												<use xlink:href="svg-icons/sprites/icons.svg#olymp-happy-faces-icon"></use>
											</svg>
										</a>

									</div>
								</div>
							</div>
						</div>
					</div>
			{% endfor %}
	</div>


					<!-- 	{% for result in search %}
							<li>
								Login: {{result.login}}<br>
								distance: {{result.distanse}}<br>
								rating: {{result.rating}}<br>
								Shared tags: {{result.numSharedTags}}<br>
								age: {{result.age}}<br>
							</li>
						{% endfor %} -->
			
			</div>
		</div>
	</div>
	{{ dump() }}
</div>

<script src="/js/search_filters.js"></script>

{% endblock %}

<!-- Fixed Sidebar Right -->

<div class="fixed-sidebar right">
    <div class="fixed-sidebar-right sidebar--small" id="sidebar-right">

        <div class="mCustomScrollbar" data-mcs-theme="dark">
            <ul class="chat-users">
                {% for friend in friends %}
                    <li class="inline-items js-chat-open">

                        <div class="author-thumb" title="{{ friend.profile.login }}">
                            <a href="/profile/{{ friend.profile.id }}" >
                                <img alt="author" src="/img{{ friend.profile.img }}" class="avatar">
                                <span class="icon-status online" data-last_action="{{ friend.profile.lastAction }}"></span>
                            </a>

                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>

        <a href="/chat" class="olympus-chat inline-items">
            <svg class="olymp-chat---messages-icon">
                <use xlink:href="/svg-icons/sprites/icons.svg#olymp-chat---messages-icon"></use>
            </svg>
        </a>

    </div>


</div>

<!-- ... end Fixed Sidebar Right -->


<!-- Fixed Sidebar Right-Responsive -->

<div class="fixed-sidebar right fixed-sidebar-responsive">

    <div class="fixed-sidebar-right sidebar--small" id="sidebar-right-responsive">

        <a href="/chat" class="olympus-chat inline-items js-chat-open">
            <svg class="olymp-chat---messages-icon">
                <use xlink:href="/svg-icons/sprites/icons.svg#olymp-chat---messages-icon"></use>
            </svg>
        </a>

    </div>

</div>

<!-- ... end Fixed Sidebar Right-Responsive -->
